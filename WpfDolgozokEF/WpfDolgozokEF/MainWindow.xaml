<Window x:Class="WpfDolgozokEF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDolgozokEF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu FontSize="16">
            <MenuItem Header="Nyilvántartás">
                <MenuItem x:Name="menuitemDolgozok" Header="Dolgozók" Click="menuitemDolgozok_Click"/>
                <MenuItem x:Name="menuitemReszlegek"  Header="Részlegek" Click="menuitemReszlegek_Click"/>
                <MenuItem x:Name="menuitemNyilvantartas" Header="Nyilvántartás" Click="menuitemNyilvantartas_Click"/>
            </MenuItem>
            
        </Menu>

    </Grid>
</Window>
