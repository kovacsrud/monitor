<Window x:Class="WpfDolgozokEF.mvvm.view.InputDolgozo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDolgozokEF.mvvm.view"
        mc:Ignorable="d"
        Title="InputDolgozo" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding AktDolgozo.Nev}" Width="300" Height="30" FontSize="18" Grid.Column="1"/>
        <TextBox Text="{Binding AktDolgozo.SzuletesiDatum}" Width="300" Height="30" FontSize="18" Grid.Column="1" Grid.Row="1"/>
        <TextBox Text="{Binding AktDolgozo.AnyjaNeve}" Width="300" Height="30" FontSize="18" Grid.Column="1" Grid.Row="2"/>
        <WrapPanel Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="buttonValaszt" Content="Kép választás" Width="200" Height="30" Click="buttonValaszt_Click"/>
            <Image x:Name="dolgozoKep" Source="{Binding AktDolgozo.DolgozoKep}" Width="100" Height="100"/>
        </WrapPanel>
        <Button x:Name="buttonMentes" Content="Mentés" Grid.Row="4" Grid.ColumnSpan="2" Width="200" Height="30" Click="buttonMentes_Click"/>

    </Grid>
</Window>
